generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id                Int               @id @default(autoincrement())
  brand             String            // Marca do carrro
  model             String            // Modelo do carrro
  color             String            // Cor do carrro
  year_manufacture  String            // Ano do Fabricação
  imported          Boolean           @default(false) //Importado?
  plates            String            // Placas
  selling_date      DateTime?         // Data de Venda
  selling_prince    Decimal?          // Preço de Venda
}
